# Version Information
WAZUH_VERSION=4.7.0
ELASTIC_VERSION=8.13.0

# Ports
KIBANA_PORT=5601
WAZUH_PORT=55000

# Security - Auto-generated strong passwords (run ./scripts/generate-secrets.sh)
# WARNING: Change these before production deployment!
ELASTIC_PASSWORD=ChangeMeElastic2025!
KIBANA_PASSWORD=ChangeMeKibana2025!
WAZUH_PASSWORD=ChangeMeWazuh2025!
WAZUH_API_USER=wazuh-admin
WAZUH_API_PASSWORD=ChangeMeWazuhAPI2025!
CORTEX_API_KEY=ChangeMeCortex2025!
CORTEX_SECRET=ChangeMeCortexSecret2025!
AI_ENGINE_API_KEY=ChangeMeAIEngine2025!

# Kibana Security
KIBANA_ENCRYPTION_KEY=ChangeMeKibanaEncryption32BytesLong!

# SSL/TLS Settings
SSL_ENABLED=true
SSL_CERT_DAYS=365

# Database Settings
DB_MAX_CONNECTIONS=100
DB_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Security
SESSION_TIMEOUT=3600
SESSION_SECRET=ChangeMeSessionSecret32BytesLong!

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE=100M
LOG_MAX_FILES=10

# Security Headers
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=ChangeMeBackupKey32BytesLong!
